<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_900"
    tools:context="login.ui.categoria.UpdateDeleteFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="331dp"
        android:layout_height="497dp"
        android:layout_gravity="center"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/fondo"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@color/blanco"/>


        <TextView


            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="22dp"
            android:drawablePadding="5dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Nombre Categoría"
            android:textColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/nombreCategoriaUpdateFragment"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView

            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="22dp"
            android:drawablePadding="5dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Estado Categoría"
            android:textColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinnerEstadoUpdate"
            style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/btnActualizarFragment"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="124dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_green_light"
                android:text="Actualizar"
                android:textColor="@color/design_default_color_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/btnBorrarFragment"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="131dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@android:color/holo_red_dark"
                android:text="Eliminar"
                android:textColor="@color/design_default_color_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGuardar" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>