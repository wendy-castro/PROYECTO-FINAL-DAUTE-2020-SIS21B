                android:orientation="horizontal"
                android:text="PROYECTO FINAL"
                android:textColor="@color/colorPrimary"
                android:textSize="50dp" />


            <ImageView
                android:layout_width="192dp"
                android:layout_height="136dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/proye" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Claudia Iveth Garcia Arevalo"
                android:textAlignment="center"
                android:textColor="#131212"
                android:textSize="20dp"

                />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Wendy Abigail Castro Lopez"
                    android:textAlignment="center"
                    android:textColor="#131212"
                    android:textSize="20dp"

            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Angelica Dolores Zepeda Lopez"
                android:textAlignment="center"
                android:textColor="#131212"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Thomas Betzabe Palacios Trejo"
                android:textAlignment="center"
                android:textColor="#131212"
                android:textSize="20dp"

                />


            <TextView
                android:id="@+id/tv_destino"
                android:layout_width="408dp"
                android:layout_height="17dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:background="#F8F5F5"
                android:elevation="4dp"
                android:text="Copyright (c) ITCA-FEPADE"
                android:textAlignment="center"
                android:textColor="#0C0C0C"
                android:textSize="12sp"
                android:textStyle="bold"

                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>